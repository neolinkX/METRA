<html>
<%
  pg070301060CFG  clsConfig = new pg070301060CFG();                 // modificar Ok

  TEntorno    vEntorno      = new TEntorno();
  vEntorno.setNumModulo(07);
  vEntorno.setNombrePagina("pg070301060.jsp");                    // modificar Ok
  vEntorno.setArchTooltips("07_Tooltips");
