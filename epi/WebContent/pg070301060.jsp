  String cCatalogo    = "pg070301061.jsp";           // modificar Ok
  String cOperador    = "1";                         // modificar ?
  String cDscOrdenar  = "Clave|Desc. Breve|Area|";        // modificar Ok
  String cCveOrdenar  = "iCveTurnoValida|cDscBreve|cDscArea|";// modificar Ok
